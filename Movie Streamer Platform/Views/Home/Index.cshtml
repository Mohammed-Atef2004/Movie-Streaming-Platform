@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section id="hero" class="hero section dark-background">

  <div class="hero-container">
    <video autoplay muted loop playsinline class="video-background">
      <source src="~/assets/img/education/video-2.mp4" type="video/mp4">
    </video>
    <div class="overlay"></div>
    <div class="container">
      <div class="row align-items-center">
        <!-- النص الأساسي -->
        <div class="col-lg-7" data-aos="zoom-out" data-aos-delay="100">
          <div class="hero-content text-white">
            <h1>Unlimited Movies & Series</h1>
            <p>Watch anywhere. Cancel anytime. Join millions of users enjoying blockbusters, originals, and timeless classics.</p>
            <div class="cta-buttons mt-3">
              <a asp-controller="Subscription" asp-action="Index" class="btn btn-primary me-2">Subscribe Now</a>
              <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-light">Browse Library</a>
            </div>
          </div>
        </div>

        <!-- مميزات / احصائيات -->
        <div class="col-lg-5" data-aos="zoom-out" data-aos-delay="200">
          <div class="stats-card bg-dark text-white p-4 rounded shadow">
            <div class="stats-header mb-3">
              <h3 class="mb-0">Why Stream With Us?</h3>
              <div class="decoration-line bg-primary mt-2" style="height:3px; width:50px;"></div>
            </div>
            <div class="stats-grid row g-3">
              <div class="col-6 stat-item d-flex align-items-center">
                <i class="bi bi-film fs-2 me-3 text-primary"></i>
                <div>
                  <h4 class="mb-0">10k+</h4>
                  <p class="mb-0 small">Movies & Series</p>
                </div>
              </div>
              <div class="col-6 stat-item d-flex align-items-center">
                <i class="bi bi-tv fs-2 me-3 text-danger"></i>
                <div>
                  <h4 class="mb-0">HD/4K</h4>
                  <p class="mb-0 small">Quality</p>
                </div>
              </div>
              <div class="col-6 stat-item d-flex align-items-center">
                <i class="bi bi-phone fs-2 me-3 text-success"></i>
                <div>
                  <h4 class="mb-0">Anytime</h4>
                  <p class="mb-0 small">Any Device</p>
                </div>
              </div>
              <div class="col-6 stat-item d-flex align-items-center">
                <i class="bi bi-people fs-2 me-3 text-warning"></i>
                <div>
                  <h4 class="mb-0">Profiles</h4>
                  <p class="mb-0 small">For Family</p>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- شريط العروض / العروض الخاصة -->
  <div class="event-ticker bg-dark text-white py-3 mt-4">
    <div class="container">
      <div class="row gy-3 text-center">
        <div class="col-md-4 col-12 ticker-item">
          <span class="fw-bold">🔥 New Release:</span>  
          <span class="ms-1">Blockbuster Premieres Every Week</span>
        </div>
        <div class="col-md-4 col-12 ticker-item">
          <span class="fw-bold">🎬 Originals:</span>  
          <span class="ms-1">Exclusive Series You Can’t Miss</span>
        </div>
        <div class="col-md-4 col-12 ticker-item">
          <span class="fw-bold">💳 Subscription:</span>  
          <span class="ms-1">Plans Starting at $9.99</span>
        </div>
      </div>
    </div>
  </div>

</section>
<!-- /Hero Section -->
