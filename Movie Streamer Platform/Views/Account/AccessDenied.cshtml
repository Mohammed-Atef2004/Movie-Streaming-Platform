@{
    ViewData["Title"] = "Access Denied";
}

<section id="error-404" class="error-404 section">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="error-wrapper">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-6" data-aos="fade-right" data-aos-delay="200">
                    <div class="error-illustration">
                         <i class="bi bi-ban-fill""></i>
                         @* <i class="bi bi-slash-circle"></i> *@
                        <div class="circle circle-1"></div>
                        <div class="circle circle-2"></div>
                        <div class="circle circle-3"></div>
                    </div>
                </div>
                <div class="col-lg-6" data-aos="fade-left" data-aos-delay="300">
                    <div class="error-content text-center">
                        <span class="error-badge" data-aos="zoom-in" data-aos-delay="400">Error</span>
                        <h1 class="error-code" data-aos="fade-up" data-aos-delay="500">403</h1>
                        <h2 class="error-title" data-aos="fade-up" data-aos-delay="600">Access Denied</h2>
                        <p class="error-description" data-aos="fade-up" data-aos-delay="700">
                            Sorry @User.Identity.Name, you don’t have permission to view this page.
                        </p>
                        <div class="error-actions" data-aos="fade-up" data-aos-delay="800">
                            <a href="/" class="btn-home btn btn-primary">
                                <i class="fas fa-arrow-left"></i> Back to Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<!-- Scroll Top -->
