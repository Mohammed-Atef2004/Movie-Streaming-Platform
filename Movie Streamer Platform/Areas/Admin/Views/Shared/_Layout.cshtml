@*
    Layout for Admin Area - Movie Streaming Platform
    All static files must be inside: wwwroot/admin_template/
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLp3eYhW9o9R1fGqG2+8E11HhL01dF1J5mGz1J98q9y2f6n9JvN6/a8W/0o8jW1R+0h9Gg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/admin_template/assets/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin_template/assets/vendors/bootstrap-icons/bootstrap-icons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin_template/assets/vendors/perfect-scrollbar/perfect-scrollbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin_template/assets/css/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin_template/assets/css/bold.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    }

    <div id="app">
        <div id="sidebar" class="active">
            <div class="sidebar-wrapper active">
                <div class="sidebar-header">
                    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center justify-content-center text-white p-3">
                        <i class="bi bi-play-circle-fill fs-3 me-2 text-danger"></i>
                        <span class="fw-bold">Streamify</span>
                    </a>
                </div>
                <div class="sidebar-menu">
                    <ul class="menu">
                        <li class="sidebar-title">Admin Dashboard</li>
                        <li class="sidebar-item @(currentController == "Movie" ? "active" : "")">
                            <a asp-area="Admin" asp-controller="Movie" asp-action="Index" class="sidebar-link">
                                <i class="bi bi-film"></i><span>Movies</span>
                            </a>
                        </li>
                        <li class="sidebar-item @(currentController == "Series" ? "active" : "")">
                            <a asp-area="Admin" asp-controller="Series" asp-action="Index" class="sidebar-link">
                                <i class="bi bi-collection-play"></i><span>Series</span>
                            </a>
                        </li>
                        <li class="sidebar-item @(currentController == "Category" ? "active" : "")">
                            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="sidebar-link">
                                <i class="bi bi-tags"></i><span>Categories</span>
                            </a>
                        </li>
                        <li class="sidebar-item @(currentController == "User" ? "active" : "")">
                            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="sidebar-link">
                                <i class="bi bi-people"></i><span>Users</span>
                            </a>
                        </li>
                        <li class="sidebar-item @(currentController == "Payment" ? "active" : "")">
                            <a asp-area="Admin" asp-controller="Payment" asp-action="Index" class="sidebar-link">
                                <i class="bi bi-credit-card"></i><span>Payments</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div id="main">
            <header class="mb-3">
                <nav class="navbar navbar-expand navbar-light">
                    <div class="container-fluid">
                        <a class="burger-btn d-block">
                            <i class="bi bi-justify fs-3"></i>
                        </a>

                        <div class="ms-auto d-flex align-items-center">
                            <div class="dropdown">
                                <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="https://i.pravatar.cc/36?u=@User.Identity.Name" class="rounded-circle me-2" alt="Profile" style="width: 36px; height: 36px;">
                                    <span class="ms-2">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#">Profile</a></li>
                                    <li>
                                        <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item p-0">
                                            <button type="submit" class="btn btn-link text-danger w-100 text-start">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>
            </header>

            <div class="page-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <footer class="mt-4">
                <div class="footer clearfix mb-0 text-muted text-center">
                    <p>© @DateTime.Now.Year Movie Streaming Platform Admin Panel</p>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/admin_template/assets/vendors/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/admin_template/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin_template/assets/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>