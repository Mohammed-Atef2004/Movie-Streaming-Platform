@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-heading mb-4">
    <h3 class="fw-bold">Welcome Back, Admin!</h3>
    <p class="text-muted">Here’s a quick overview of your Movie Streaming Platform.</p>
</div>

<div class="row g-4">
    <!-- Movies Card -->
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm border-0 bg-primary text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-uppercase fw-bold">Movies</h6>
                    <h2 class="fw-bold">@ViewBag.MovieCount</h2>
                    <small>Total movies in the platform</small>
                </div>
                <i class="bi bi-film fs-1 opacity-75"></i>
            </div>
        </div>
    </div>

    <!-- Series Card -->
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm border-0 bg-success text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-uppercase fw-bold">Series</h6>
                    <h2 class="fw-bold">@ViewBag.SeriesCount</h2>
                    <small>Total series in the platform</small>
                </div>
                <i class="bi bi-collection-play fs-1 opacity-75"></i>
            </div>
        </div>
    </div>

    <!-- Users Card -->
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm border-0 bg-warning text-dark">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-uppercase fw-bold">Users</h6>
                    <h2 class="fw-bold">@ViewBag.UserCount</h2>
                    <small>Total registered users</small>
                </div>
                <i class="bi bi-people fs-1 opacity-75"></i>
            </div>
        </div>
    </div>

    <!-- Payments Card -->
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm border-0 bg-danger text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-uppercase fw-bold">Payments</h6>
                    <h2 class="fw-bold">@ViewBag.PaymentCount</h2>
                    <small>Total successful transactions</small>
                </div>
                <i class="bi bi-credit-card fs-1 opacity-75"></i>
            </div>
        </div>
    </div>
</div>

<!-- Recent Movies Table -->
<div class="row mt-5">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light">
                <h5 class="mb-0 fw-bold">Recent Movie Additions</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Release Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var movie in ViewBag.RecentMovies)
                        {
                                <tr>
                                    <td class="fw-bold">@movie.Title</td>
                                    <td>@movie.Category.Name</td>
                                    @* <td>@movie.ReleaseDate.ToString("MMM dd, yyyy")</td> *@
                                    @* <td> *@
                                    @*     @* <span class="badge @(movie.IsActive ? "bg-success" : "bg-secondary")">  
                                    @*     @* @(movie.IsActive ? "Active" : "Inactive") 
                                    @*     </span> *@
                                    @* </td> *@
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
